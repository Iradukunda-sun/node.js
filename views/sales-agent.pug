form(action='/sales' method='post')
  h2 AGENT DETAILS
  table
    tr
      td Agent Name:
      td
        input#agentName(type='text' name='agentName' required='')
    tr
      td Email:
      td
        input#agentEmail(type='email' name='agentEmail' required='')
    tr
      td Phone Number:
      td
        input#agentPhone(type='tel' name='agentPhone' required='')
    tr
      td Address:
      td
        input#agentAddress(type='text' name='agentAddress' required='')
  button#save_button(type='submit') Save
  button#cancel_button(type='reset') Cancel