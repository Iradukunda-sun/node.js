doctype html
html(lang="en")
  head
    title Users Page
    Link(rel="stylesheet" href="/css/all-users.css")     
  body
    h1 All Users List
    table
      thead
        tr
          th  Name
          
          th Branch
          th Role
          th Action
      tbody
        if signins.length 
        each signin in signins
          tr
            td #{signin.theName}
           
            td #{signin.branch}
            td #{signin.role}
            td 
              form(method ="post" action = '/deleteUser') 
                input(type="hidden", placeholder="", name="id", value=signin._id)
                button#delete_button(type='submit') Delete 
        else 
          p no users signed up yet